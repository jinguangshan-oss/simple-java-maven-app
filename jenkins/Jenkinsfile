pipeline {
    agent any
    tools {
        maven 'Maven 3.6.3'
        jdk 'jdk8'
    }
    stages {
        stage ('Initialize') {
            steps {
                echo "PATH = ${PATH}"
                echo "MAVEN_HOME = ${MAVEN_HOME}"
            }
        }

        stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install'
            }
            post {
                success {
                    echo "build success"
                    NAME=`mvn help:evaluate -Dexpression=project.name | grep "^[^\[]"`
                    VERSION=`mvn help:evaluate -Dexpression=project.version | grep "^[^\[]"`
                    echo "${NAME}-${VERSION}"
                }
            }
        }
    }
}